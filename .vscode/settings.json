{
  // Formata o código automaticamente ao salvar
  "editor.formatOnSave": true,

  // Define o Prettier como o formatador padrão para os arquivos do projeto
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // Ativa a correção automática de problemas do ESLint ao salvar
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  // Garante que o ESLint valide todos os tipos de arquivo relevantes no projeto
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ]
}